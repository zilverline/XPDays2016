<div class="container">
  <h2>
    <strong>Name:</strong>
    <%= @tenant.name %>
  </h2>

  <h2>
    <strong>Id:</strong>
    <%= @tenant.id %>
  </h2>

  <br />
  <br />

  <div class="list-group">
    <p class="list-group-item active">API</p>
    <p class="list-group-item">GET:  /tenants/<%=@tenant.id %>/todo_items</p>
    <p class="list-group-item">POST: /tenants/<%=@tenant.id %>/todo_items</p>
    <p class="list-group-item">PUT:  /tenants/<%=@tenant.id %>/todo_items/{item_id}</p>
    <p class="list-group-item">DELETE: /tenants/<%=@tenant.id %>/todo_items/{item_id}</p>

  </div>

  <br />
  <br />
  <h3>Add a todo item</h3>

  <%= form_for([@tenant, @tenant.todo_items.build]) do |f| %>
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label :due_date %><br>
        <%= f.text_field :due_date %>
      </p>
      <p>
        <%= f.submit 'Add item' , :class =>"btn btn-lg btn-primary" %>
      </p>
  <% end %>

  <br />
  <br />

  <h3>To do items</h3>

  <table class="table table-striped">
    <tr>
      <th>Title</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>

    <% @tenant.todo_items.each do |item| %>
        <tr>
          <td><%= item.title %></td>
          <td><%= item.due_date %></td>
        </tr>
    <% end %>
  </table>

  <br />
  <br />

  <%= link_to 'Other Participants', tenants_path, {:class =>"btn btn-default"} %>

  <br />
  <br />
</div>

