<p>
  <strong>Name:</strong>
  <%= @tenant.name %>
</p>

<p>
  <strong>Id:</strong>
  <%= @tenant.id %>
</p>

<h2>To do items</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Due date</th>
    <th colspan="3"></th>
  </tr>

  <% @tenant.todo_items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.due_date %></td>
      </tr>
  <% end %>
</table>

<h2>Add a todo item:</h2>

<%= form_for([@tenant, @tenant.todo_items.build]) do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :due_date %><br>
      <%= f.text_field :due_date %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>


<%= link_to 'Back', tenants_path %>